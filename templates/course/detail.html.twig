{% extends "base.html.twig" %}

{% block body %}
	<div class="container-fluid col-md-8 text-center">
		<h2 class="text text-success mb-3">{{ course.name }}</h2>
		<div class="row">
			<div class="col">
				<img src="{{ course.image }}" width="250" height="250">
			</div>
			<div class="col">
				<h5 class="text-info">PRICE:
					{{ course.price }}$</h5>
				<br><br>
			</div>
			<div class="row">

				<div class="col">
					<h5 class="text-info">ListStudent:</h5>


					{% if course.students != null %}
						{% for student in course.students %}
							<a class="text text-success" href="{{ path('student_detail' , {'id' : student.id })}}">
								{{ student.name }}
							</a>
							<br>
						{% endfor %}
					{% endif %}

				</div>
			</div>
		</div>

	{% endblock %}
